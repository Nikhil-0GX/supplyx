{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-undef": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "no-unused-vars": ["error", { 
      "varsIgnorePattern": "IDL",
      "argsIgnorePattern": "^_"
    }]
  },
  "globals": {
    "BigInt": "readonly"
  },
  "ignorePatterns": ["src/declarations/**/*.js"]
} 